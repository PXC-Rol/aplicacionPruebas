<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/B_crear_hsp"
        style="android:buttonStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="createHotspot"
        android:text="Crear Hotspot" />

    <Button
        android:id="@+id/B_conectar_hsp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="connectToHotspot"
        android:text="Conectar a Hotspot" />

    <Button
        android:id="@+id/B_jugar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="play"
        android:text="Jugar" />

    <Button
        android:id="@+id/B_salir"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="exit"
        android:text="Salir" />

</LinearLayout>